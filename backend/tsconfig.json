{
  "compilerOptions": {
    "baseUrl": "./src/ts/",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "importHelpers": true,
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build/prod/src",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es7",
      "scripthost",
      "es2015.collection",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}